<!DOCTYPE html>
<html lang="en">

<head>
  <title>Register</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <!-- External CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <!-- External JS -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- App JS -->

</head>
<body>
  <!-- Website Navbar -->
  <nav>
    <%- include('partials/_header') %>
  </nav>
  <main>
    <form class="form" method="post" action="/api/register">
      <div class="login-register-title">Register</div>
      <div class="form-input">
        <label class="name-label" for="inputFirstName">First Name</label>
        <input class="name-inpnut" type="text" name="firstName" id="inputFirstName" placeholder="First Name">
      </div>
      <div class="form-input">
        <label class="name-label" for="inputLastName">Last Name</label>
        <input class="name-inpnut" type="text" name="lastName" id="inputLastName" placeholder="Last Name">
      </div>
      <div class="form-input">
        <label class="phone-label" for="inputPhone">Phone Number</label>
        <input class="phone-input" type="tel" name="phone" id="inputPhone" placeholder="123-456-7890">
      </div>
      <div class="form-input">
        <label class="password-label" for="inputPassword">Password</label>
        <input class="password-input" type="password" name="password" id="inputPassword" placeholder="Password">
      </div>
      <button class="submit-button" type="submit">Register</button>
    </form>
  </main>
</body>
</html>

